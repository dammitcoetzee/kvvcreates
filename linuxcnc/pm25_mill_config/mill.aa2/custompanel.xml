<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
	<vbox>

		<relief>RIDGE</relief>
		<bd>6</bd>

		<label>
			<text>"Spindle"</text>
			<font>("Helvetica", 20)</font>
		</label>

		<bar>
			<halpin>"spindle-speed"</halpin>
			<max_>5900</max_>
		</bar>

		<hbox>
			<label>
				<text>"  Target"</text>
				<font>("Helvetica", 20)</font>
			</label>

			<number>
				<font>("Helvetica", 20)</font>
				<halpin>"spindle-speed-target"</halpin>
				<format>"d"</format>
			</number>

			<led>
				<halpin>"spindle-at-speed-led"</halpin>
				<size>30</size>
				<on_color>"green"</on_color>
				<off_color>"red"</off_color>
			</led>
		</hbox>

		<hbox>
			<label>
				<text>"  Lock"</text>
				<font>("Helvetica", 20)</font>
			</label>

			<led>
				<halpin>"spindle-locked-led"</halpin>
				<size>30</size>
				<on_color>"red"</on_color>
				<off_color>"green"</off_color>
			</led>
		</hbox>

                <hbox>
                        <label>
                                <text>"  Pos: "</text>
                                <font>("Helvetica", 20)</font>
                        </label>

                        <number>
                                <font>("Helvetica", 20)</font>
                                <halpin>"spindle-position-c"</halpin>
                                <format>"3.2f"</format>
                        </number>
                </hbox>

		<label>
			<text>"Velocity"</text>
			<font>("Helvetica", 20)</font>
		</label>

                <hbox>
                        <label>
                                <text>"  C: "</text>
                                <font>("Helvetica", 20)</font>
                        </label>

                        <number>
                                <font>("Helvetica", 20)</font>
                                <halpin>"spindle-speed-c"</halpin>
                                <format>"+3.2f"</format>
                        </number>
                </hbox>

		<hbox>
			<label>
				<text>"  X: "</text>
				<font>("Helvetica", 20)</font>
			</label>

			<number>
				<font>("Helvetica", 20)</font>
				<halpin>"x-velocity-upm"</halpin>
				<format>"+3.2f"</format>
			</number>
		</hbox>

		<hbox>
			<label>
				<text>"  Y: "</text>
				<font>("Helvetica", 20)</font>
			</label>

			<number>
				<font>("Helvetica", 20)</font>
				<halpin>"y-velocity-upm"</halpin>
				<format>"+3.2f"</format>
			</number>
		</hbox>

		<hbox>
			<label>
				<text>"  Z: "</text>
				<font>("Helvetica", 20)</font>
			</label>

			<number>
				<font>("Helvetica", 20)</font>
				<halpin>"z-velocity-upm"</halpin>
				<format>"+3.2f"</format>
			</number>
		</hbox>

	</vbox>
</pyvcp>
